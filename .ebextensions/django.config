container_commands:
  01_replace_settings:
    command: "mv foursquare_search/settings_eb.py foursquare_search/settings_local.py"
    leader_only: true
  02_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "python manage.py collect --noinput"
    leader_only: true

option_settings:
  - namespace: aws:elasticbeanstalk:container:python
      option_name: WSGIPath
      value: foursquare_search/wsgi.py
    - option_name: DJANGO_SETTINGS_MODULE
      value: foursquare_search.settings